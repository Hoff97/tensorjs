{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es6",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "typedocOptions": {
    "entryPoints": ["lib/library.ts"],
    "out": "docs"
  }
}