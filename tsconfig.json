{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2015", "DOM"]
  },
  "exclude": [
    "node_modules",
    "docs",
    "test",
    "pkg",
    "dist",
    "karma.conf.js",
    "karma.performance.js"
  ],
  "typedocOptions": {
    "entryPoints": ["lib/library.ts"],
    "out": "docs"
  }
}