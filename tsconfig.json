{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ES6",
    "allowJs": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES2015", "DOM"],
  },
  "exclude": [
    "node_modules",
    "docs",
    "test",
    "pkg",
    "dist",
    "karma.conf.js",
    "karma.performance.js",
    "tools",
    "examples"
  ],
  "typedocOptions": {
    "entryPoints": ["lib/library.ts"],
    "out": "docs"
  }
}